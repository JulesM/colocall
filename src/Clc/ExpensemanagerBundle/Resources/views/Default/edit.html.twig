{# src/Clc/ExpensemanagerBundle/Resources/views/Default/edit.html.twig #}

{% extends '::base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/expensemanager.css') }}" type="text/css" />
{% endblock %}

{% block body %}

<div id="edit-expense-box">

    <div id="edit-expense-header">
        <h3>Edit Expense</h3>
    </div>

<form action="{{ path('clc_expensemanager_edit', {'id': id }) }}" method="post" {{ form_enctype(form) }}>
    
    {{ form_errors(form) }}

    <div style="display: inline-block; width: 50%; height: 350px;">

        <div>
            {{ form_label(form.name, 'Description of the expense') }}
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}
        </div>
        
        <div>
            {{ form_label(form.owner, 'Who paid ?') }}
            {{ form_errors(form.owner) }}
            {{ form_widget(form.owner) }}
        </div>
        
        <div>
            {{ form_label(form.amount, 'How much was paid in total ?') }}
            {{ form_errors(form.amount) }}
            {{ form_widget(form.amount, { 'attr': { 'style' : 'width: 60px;' } }) }}
        </div>
        
        <div>
            {{ form_label(form.date, 'When ?') }}
            {{ form_errors(form.date) }}
            {{ form_widget(form.date) }}
        </div>

    </div>
    
    <div style="display: inline-block; width: 48%; height: 250px; float: right; padding-top: 2px;">
        <div>
            {{ form_label(form.users, 'Who is concerned ?') }}
            {{ form_errors(form.users) }}
            {{ form_widget(form.users) }}
        </div>

        {{ form_rest(form) }}
    </div>

    <div style="text-align: center;">
        <a class="btn" href="{{ path('clc_expensemanager_homepage') }}">Cancel</a>
        <input class="btn btn-success" type="submit" value="Save changes"/>
    </div>
    
</form>

</div>

{% endblock %}