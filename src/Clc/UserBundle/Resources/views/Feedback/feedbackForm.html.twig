{# src/Clc/Resources/views/Feedback/feedbackForm.html.twig #}

<form action="{{ path('clc_user_feedback') }}" method="post" {{ form_enctype(form) }}>
    
    {{ form_errors(form) }}

    <div>
        {{ form_errors(form.category) }}
        {{ form_widget(form.category, { 'attr': { 'style' : 'width: 80%;' } }) }}
    </div>

    <div>
        {{ form_errors(form.text) }}
        {{ form_widget(form.text, { 'attr': { 'style' : 'width: 90%; height : 100px;' } }) }}
    </div>

    {{ form_rest(form) }}

    <input class="btn btn-danger" type="submit" value="Feedback"/>
</form>
