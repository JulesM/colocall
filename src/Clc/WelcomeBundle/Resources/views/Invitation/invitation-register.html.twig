{% extends "ClcWelcomeBundle:Links:register.html.twig" %}

{% block title %}Coloc'all - Accept invitation{% endblock %}

{% block registerTitle %}<h1>{{ 'Register here to accept the invitation'|trans }}</h1>{% endblock %}

{% block registerFooter %}
	
	<p>{{ 'If you already registered,'|trans }} <a href="#loginModal" data-toggle="modal">{{ 'login here'|trans }}</a></p>

	<!-- login modal -->
    <div id="loginModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h3 id="myModalLabel">{{ 'Login here to accept the invitation'|trans }}</h3>
        </div>
        <div class="modal-body">

            {% render 'FOSUserBundle:Security:login' %}

        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">{{ 'Close'|trans }}</button>
        </div>
    </div>

{% endblock %}