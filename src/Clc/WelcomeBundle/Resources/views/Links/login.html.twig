{% extends "ClcWelcomeBundle::welcome.html.twig" %}

{% block title %}Welcome to Coloc'all - Make life in your shared appartment easier{% endblock %}

{% block welcome1 %}

<div id="mainbox">
    <div id="middle-block-ext">
       <div id="middle-block">

            <div id="catchphrase-box">
                <h1>Welcome to Coloc'all</h1>
                <h2>Make life in your Flatshare easier</h2>
                <div id="catchphrase-img">
                   <img src="{{ asset('img/visitor_homepage/icon-expenses.png') }}" height="75px" width="75px" alt="">
                   <img src="{{ asset('img/visitor_homepage/icon-list.png') }}" height="75px" width="75px"  alt="">
                   <img src="{{ asset('img/visitor_homepage/icon-shopping.png') }}" height="75px" width="75px"  alt="">
                </div>
                <div id="catchphrase-lgd">
                   <p>Manage Expenses</p>
                   <p>Follow To-dos</p>
                   <p>Share Shopping Lists</p>
                </div>
            </div>

            <div id="login-box">
              <div id="login-box-content">
                    
                <div id="legend">
                  <h2>Login Here</h2>
                </div>
                    
                <div id="login-form">
                	{% render 'FOSUserBundle:Security:login' %}
                </div> 

                <div id="login-footer">
                	<div class="login-footer-link">
                  	<a class="btn btn-link" id="not-yet-user" href="{{ path('clc_welcome_register') }}">Not yet a user ?</a>
                  </div>
                  <div class="login-footer-link">   
                      <a class="btn btn-link" id="forgot-password" href="#changePasswordModal" data-toggle="modal">Forgot your password ?</a>
                  </div>
                </div>

				      </div>
	          </div>

        </div>
    </div>

    <!-- change password modal -->
    <div id="changePasswordModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h3 id="myModalLabel">Enter your email to get a new password</h3>
        </div>
        <div class="modal-body">

            {% render 'FOSUserBundle:Resetting:request' %}

        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        </div>
    </div>

    <div id="beta-box">
        <p>This is a Beta version, for ANY issue or question, please send an email to <a href="mailto:contact@colocall.co">contact@colocall.co</a></p>
    </div>   
</div>

{% endblock %}
