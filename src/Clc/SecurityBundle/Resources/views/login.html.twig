{# src/Clc/SecurityBundle/Resources/views/Security/login.html.twig #}

{% extends "::frame.html.twig" %}

{% block mainbox %}

    {% if error %}
        <div>{{ error.message }}</div>
    {% endif %}

    <form action="{{ path('login_check') }}" method="post">
        <label for="username">Login :</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />

        <label for="password">Password :</label>
        <input type="password" id="password" name="_password"/>

        {#
            Si vous voulez controler l'URL vers laquelle l'utilisateur est redirigé en cas de succès
            (plus de détails ci-dessous)
            <input type="hidden" name="_target_path" value="/account" />
        #}

        <button type="submit" href="{{ path('clc_dashboard_homepage') }}">login</button>
    </form>
    
{% endblock %}    