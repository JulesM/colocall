{# src/Clc/ShoppinglistBundle/Resources/views/layout.html.twig #}
 
{% extends "::base.html.twig" %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/shopping-list.css') }}" type="text/css" />
{% endblock %}
 
{% block title %}
  {{ parent() }} - Shopping list
{% endblock %}
 
{% block body %}
  

    
  <div id="todos-content">
        <div id="todos-toolbar-tab">
             <ul class="todo-filter-tab">
                <li class="add-todo"> 
                    <button class="circle-button"><i class="icon-plus icon-muted" style="color: rgb(88, 104, 120); text-shadow: 0px 1px rgb(255, 255, 255);"></i></button>
                </li>
                <li class="status-filter">
                    <div class="btn-group">
                    <button class="btn">Pending</button>
                    <button class="btn">Checked</button>
                    </div>
                </li>
                <li class="category-filter"><button class="square-button"><i class="icon-list-ul icon-white" style="color: rgb(88, 104, 120); text-shadow: 0px 1px rgb(255, 255, 255);"></i></button></li>
            </ul>
                        
        </div>
      
        <div id="todos-table2-container">
            
            <section class="todo">

                 <table id="todo-list" class="table">
                     
                 <caption id="todo-table-caption">  
                    <div id="todo-filter-tab-container">
                        <div id="item-check" class="btn-group">
                                 <button class="btn"><i class="icon-check" style="font-size: 1.5em; vertical-align: middle; margin-right: 0px; color: rgb(155, 197, 142);"></i></button>
                        </div> 
                        <div id="all-todos-caption">
                            <p>What's missing?</p>
                        </div>

                        </div>
                    </div>
                 </caption>
                         
                 <tbody>

                       <tr>
                         <td id="check">
                             <a href="#" class="toggle">Toggle</a>                        
                         </td>
                         <td id="task">Washing powder</td>
                         <td>Arnaud</td>
                         <td><i class="icon-time"></i>2 days</td>
                         <td id="todo-list-edit-comment-delete">
                         <i class="icon-eye-open"></i>
                         <i class="icon-edit"></i>
                         <a>
                               <i class="icon-trash" href="#" ></i>
                             </a>
                         </td>
                       </tr>
                
                   </tbody>
                 </table>      

              <ul class="todo-pagination">
                <li class="previous"><span><i class="icon-previous"></i> Previous</span></li>

                <li class="next"><a href="index.html">Next <i class="icon-next"></i></a></li>
              </ul>

                
    </section>
  </div>                

      
  </div>
    
{% endblock %}