{# src/Clc/TodosBundle/Resources/views/Default/new.html.twig #}

<form action="{{ path('clc_todos_new') }}" method="post" {{ form_enctype(form) }}>
    
    {{ form_errors(form) }}

    <div>
        {{ form_label(form.task, 'To-do description') }}
        {{ form_errors(form.task) }}
        {{ form_widget(form.task) }}
    </div>

    <div>
        {{ form_label(form.dueDate, 'Due date') }}
        {{ form_errors(form.dueDate) }}
        {{ form_widget(form.dueDate) }}
    </div>

    <div>
        {{ form_label(form.owner, 'Who is assigned ? (leave blank for Anyone)') }}
        {{ form_errors(form.owner) }}
        {{ form_widget(form.owner) }}
    </div>

    {{ form_rest(form) }}

    <input class="btn btn-success" type="submit" value="Submit To-do"/>
</form>