{# app/Resources/views/banner.html.twig#}
  
<div id="banner1">
  <a href="{{ path('clc_dashboard_homepage') }}"><img src="{{ asset('img/logo.png') }}" id="logo"  alt=""></a>
</div>
        
<div id="banner2">
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

        <div id="settings_button" class="banner-button">      
            <div class="dropdown">
                <a id="settings_dropdown_button" class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="icon-cog"></i>
                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <!-- dropdown menu links -->
                    <li><a href="{{ path('clc_parameters_homepage') }}">Parameters</a></li>
                    <li><a href="{{ path('fos_user_security_logout') }}">Log out</a></li>         
                </ul>
            </div>
        </div>
    
        <div id="home_button" class="banner-button">
            <a class="btn btn-link" href="{{ path('clc_dashboard_homepage') }}">Home</a>        
        </div>
    
        <div id="name_button" class="banner-button">
            <a class="btn btn-link" href="{{ path('clc_user_profile') }}">
                <img src="{{ asset(app.session.get('path')) }}" alt="">
                <p>{{ app.user.nickname }}</p>
            </a>        
        </div>

    {% else %}
    
        <div id="login-box">
            {% render 'FOSUserBundle:Security:login' %}
        </div>
        
        <a class="btn btn-link" id="forgot-password" href="#changePasswordModal" data-toggle="modal">Forgot your password ?</a>
        
        <!-- change password modal -->
        <div id="changePasswordModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h3 id="myModalLabel">Enter your email to get a new password</h3>
            </div>
            <div class="modal-body">

                {% render 'FOSUserBundle:Resetting:request' %}

            </div>
            <div class="modal-footer">
                <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            </div>
        </div>
    {% endif %}
       
</div>     